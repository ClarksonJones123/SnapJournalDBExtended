{
  "manifest_version": 3,
  "name": "Screenshot Annotator - Working",
  "version": "1.0",
  "description": "Capture screenshots and add annotations - WORKING VERSION",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot Annotator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}