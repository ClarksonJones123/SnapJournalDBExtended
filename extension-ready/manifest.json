{
  "manifest_version": 3,
  "name": "Screenshot Annotator - Universal",
  "version": "2.0",
  "description": "Capture screenshots and add annotations - WORKS ON ANY PAGE!",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot Annotator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "annotation.html", 
        "annotation.js", 
        "pdf-export.html", 
        "pdf-export.js", 
        "pdf-export-init.js",
        "jspdf.min.js",
        "debug-export.html",
        "debug-export.js",
        "temp-storage.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}